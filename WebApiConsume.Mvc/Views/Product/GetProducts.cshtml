@{
    ViewData["Title"] = "GetProducts";
}

<h1>GetProducts</h1>
@model List<Product>
<table class="table table-hover table-responsive">

    <thead>
        <tr>
            <th>Id</th>
            <th>Ürün Adı</th>
            <th>Ürün Stoğu</th>
            <th>Ürün Fiyatı</th>
            <th>Kategori  Adı</th>
            <th>Güncelle</th>
            <th>Sil</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Stock</td>
                <td>@item.Price</td>
                <td>@item.Category.Name</td>
                <td>
                    <a asp-controller="Product" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a>
                </td>
                <td>
                    <a class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    
    </tbody>

</table>