
@{
    ViewData["Title"] = "SignIn";
}

<h1>SignIn</h1>
@model SignInModel

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="SignIn">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="form-group">
                    <label >Kullanıcı Adı</label>
                    <input asp-for="UserName" type="text" class="form-control"  placeholder="Kullanıcı Adı">
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    <input asp-for="Password" type="password" class="form-control"  placeholder="Şifre">
                </div>
                <div class="form-check">
                    <input type="checkbox" asp-for="RememberMe" class="form-check-input">
                    <label class="form-check-label" for="exampleCheck1">Beni Hatırla</label>
                </div>
                <button type="submit" class="btn btn-primary">Giriş Yap</button>
            </form>



        </div>
    </div>
</div>
